<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:background="@drawable/bg_imperial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.camilomontoya.deathstar_android.resultActivity">

    <TextView
        android:text="Resultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/titulo"
        android:textColor="#FFFFFF"
        android:textStyle="normal|bold"
        android:textSize="25sp" />

    <TextView
        android:text="Jugador 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_toStartOf="@+id/titulo"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:id="@+id/res_jug1"
        android:textStyle="normal|italic"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:text="Jugador 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res_jug2"
        android:textColor="#FFFFFF"
        android:textStyle="normal|italic"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/res_jug1"
        android:layout_alignBottom="@+id/res_jug1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Jugador 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/res_jug2"
        android:layout_toEndOf="@+id/titulo"
        android:layout_marginStart="21dp"
        android:id="@+id/res_jug3"
        android:textColor="#FFFFFF"
        android:textStyle="normal|italic"
        android:textSize="15sp" />

    <TextView
        android:text="Puntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/puntuacion2"
        android:textColor="#FFFB3276"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/puntuacion1"
        android:layout_alignBottom="@+id/puntuacion1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Puntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/puntuacion3"
        android:textColor="#FFFB3276"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/puntuacion2"
        android:layout_alignBottom="@+id/puntuacion2"
        android:layout_alignStart="@+id/res_jug3" />

    <TextView
        android:text="Puntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/puntuacion1"
        android:textColor="#FFFB3276"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_below="@+id/res_jug1"
        android:layout_alignEnd="@+id/res_jug1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/score_1"
        android:layout_centerHorizontal="true"
        android:id="@+id/score_2"
        android:text="0" />

    <TextView
        android:text="Distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distancia_1"
        android:textColor="#FFFB3276"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/distancia_3"
        android:layout_alignBottom="@+id/distancia_3"
        android:layout_alignEnd="@+id/puntuacion1" />

    <TextView
        android:text="Distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/distancia_2"
        android:textColor="#FFFB3276"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_below="@+id/score_2"
        android:layout_alignStart="@+id/res_jug2" />

    <TextView
        android:text="Distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distancia_3"
        android:textColor="#FFFB3276"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/distancia_2"
        android:layout_alignBottom="@+id/distancia_2"
        android:layout_alignStart="@+id/puntuacion3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_3"
        android:layout_marginEnd="19dp"
        android:text="0"
        android:layout_above="@+id/distancia_2"
        android:layout_alignEnd="@+id/distancia_3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/score_1"
        android:layout_marginStart="20dp"
        android:text="0"
        android:layout_below="@+id/puntuacion1"
        android:layout_alignStart="@+id/distancia_1"
        android:textAlignment="center" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/dist_2"
        android:textAlignment="center"
        android:layout_below="@+id/distancia_2"
        android:layout_alignStart="@+id/score_2" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dist_3"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/dist_1"
        android:layout_alignBottom="@+id/dist_1"
        android:layout_alignStart="@+id/score_3" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dist_1"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/dist_2"
        android:layout_alignBottom="@+id/dist_2"
        android:layout_alignStart="@+id/score_1" />

    <TextView
        android:text="Enemigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dist_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/enemigos_2"
        android:textColor="#FFFB3276"
        android:textStyle="normal|bold"
        android:textSize="15sp" />

    <TextView
        android:text="Enemigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enemigos_3"
        android:textColor="#FFFB3276"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/enemigos_1"
        android:layout_alignBottom="@+id/enemigos_1"
        android:layout_alignStart="@+id/distancia_3" />

    <TextView
        android:text="Enemigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enemigos_1"
        android:textColor="#FFFB3276"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/enemigos_2"
        android:layout_alignBottom="@+id/enemigos_2"
        android:layout_alignEnd="@+id/distancia_1" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enemigos_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/enemies_2" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enemies_3"
        android:layout_alignBaseline="@+id/enemies_2"
        android:layout_alignBottom="@+id/enemies_2"
        android:layout_alignStart="@+id/dist_3" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enemies_1"
        android:layout_alignBaseline="@+id/enemies_2"
        android:layout_alignBottom="@+id/enemies_2"
        android:layout_alignStart="@+id/dist_1" />
</RelativeLayout>
