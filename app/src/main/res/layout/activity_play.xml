<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:background="@drawable/bg_imperial2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.camilomontoya.deathstar_android.PlayActivity">

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player3"
        android:maxWidth="400dp"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:gravity="right"
        android:textOff="@string/user3"
        android:textOn="@string/user3"
        android:padding="8dp"
        android:background="@drawable/tooglebutton_user"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/player2"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player2"
        android:maxWidth="400dp"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:gravity="right"
        android:textOff="@string/user2"
        android:textOn="@string/user2"
        android:padding="8dp"
        android:background="@drawable/tooglebutton_user"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/player1"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/r2d2_button"
        android:id="@+id/r2d2"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:background="#00000000"
        android:layout_marginStart="11dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/fighter" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bomber_button"
        android:id="@+id/bomber"
        android:background="#00000000"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_above="@+id/stroom"
        android:layout_alignStart="@+id/r2d2"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fighter_button"
        android:layout_marginStart="27dp"
        android:id="@+id/fighter"
        android:background="#00000000"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_alignTop="@+id/bomber"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stroom_button"
        android:id="@+id/stroom"
        android:background="#00000000"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/fighter" />

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player1"
        android:maxWidth="400dp"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:gravity="right"
        android:textOff="@string/user1"
        android:textOn="@string/user1"
        android:padding="8dp"
        android:background="@drawable/tooglebutton_user"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
